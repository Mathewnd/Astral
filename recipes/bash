name=bash
revision=1
from_source=bash
imagedeps="base-devel"
hostdeps="gcc-cross binutils-cross"
deps="mlibc readline"

configure() {
	
	${source_dir}/configure --host=x86_64-astral --prefix=${prefix} --without-bash-malloc
	
}

build() {
	
	make -j ${parallelism}

}

install() {

	make install DESTDIR=${dest_dir}

}
