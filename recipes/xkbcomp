name=xkbcomp
revision=1
from_source=xkbcomp
imagedeps="gcc"
hostdeps="xgcc xbinutils pkgconfig automake autoconf util-macros libtool"
deps="base libxcb xcb-proto xkbfile"

build() {
	${source_dir}/configure --prefix=${prefix} --host=x86_64-astral
	make -j${parallelism}
}

package() {
	make DESTDIR=${dest_dir} install
}
