NORMAL="\[\e[0m\]"
RED="\[\e[1;31m\]"
GREEN="\[\e[1;32m\]"
BLUE="\[\e[1;36m\]"
WHITE="\[\e[1;37m\]"
PS1="$GREEN\u$NORMAL@$BLUE\h$NORMAL:$WHITE\w$NORMAL>"

alias ls="ls --color=auto"
alias grep="grep --color=auto"

if [ $(tty) == "/dev/console" ]
then
	alias startwm="exec /usr/libexec/astral/startwm"
fi
