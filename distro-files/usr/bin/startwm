#!/usr/bin/bash
export DISPLAY=":0"
X &
while [ 1 ]
do
  if [ -S /tmp/.X11-unix/X0 ]
  then
    break
  fi

  if [ $SECONDS -gt 15 ]
  then
    echo timeout
    exit 1
  fi

  sleep 0.5
done
stty -echo -echoctl -isig
xterm -e "bash -l" & &> /tmp/.xtermstderr > /tmp/.xtermstdout
exec fvwm3 &> /tmp/.fvwm3stderr > /tmp/.fvwm3stdout
